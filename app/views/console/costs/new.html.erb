<section class="content-header">
  <h1>
    Quản lý chi phí phát sinh
    <small>Tạo mới phát sinh</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li><a href="<%= console_costs_url %>"><i class="fa fa-list"></i> Danh sách phát sinh</a></li>
    <li class="active">Tạo mới phát sinh</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-sm-12">
      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Thông tin phát sinh</h3>
        </div>
        <%= form_for :anything,  html: {id: 'item_form', class: 'form-horizontal'}, url: "my_controller/my_action" do |form| %> <form class="form-horizontal">
        <div class="box-body">
          <!-- form start -->
          <form class="form-horizontal">
            <div class="box-body">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Dự án</label>
                <div class="col-sm-10">
                  <select class="form-control select2" style="width: 100%;">
                    <option>Nhà A</option>
                    <option>Nhà B</option>
                    <option>Nhà C</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Nội dung phát sinh</label>
                <div class="col-sm-10">
                    <%= form.cktext_area :notes, class: 'someclass', ckeditor: { language: 'vi'} %>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ngày phát sinh</label>
                <div class="col-sm-2">
                  <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="datepicker form-control pull-right">
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Số tiền phát sinh</label>
                <div class="col-sm-2">
                  <input type="text" class="form-control text-right" id="" value="2.000.000.000">
                </div>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <button type="button" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Xoá</button>
              <button type="submit" class="btn btn-success btn-sm"><i class="fa fa-save"></i> Đã nhận</button>
              <button type="submit" class="btn btn-info btn-sm pull-right"><i class="fa fa-save"></i> Lưu</button>
            </div>
            <!-- /.box-footer -->
          </form>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>

<script>
  $(function () {
    //Date picker
    $('.datepicker').datepicker({
      autoclose: true
    })

    //Initialize Select2 Elements
    $('.select2').select2()
  });
</script>
