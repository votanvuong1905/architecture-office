<section class="content-header">
  <h1>
    Quản lý công việc
    <small>Tạo mới công việc</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li><a href="<%= console_tasks_url %>"><i class="fa fa-list"></i> Danh sách công việc</a></li>
    <li class="active">Tạo mới công việc</li>
  </ol>
</section>

<section class="content">
  <div class="row">
    <div class="col-sm-12">
      <div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Mô tả công việc</h3>
        </div>
        <div class="box-body">
          <%= form_for :anything,  html: {id: 'item_form', class: 'form-horizontal'}, url: "my_controller/my_action" do |form| %> <form class="form-horizontal">
            <div class="col-sm-12">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Tiêu đề</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputEmail3" placeholder="Tiêu đề của công việc">
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Mô tả</label>
                <div class="col-sm-10">
                    <%= form.cktext_area :notes, class: 'someclass', ckeditor: { language: 'vn'} %>
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Dự án</label>
                <div class="col-sm-4">
                  <select class="form-control select2" style="width: 100%;">
                    <option></option>
                    <option>Nhà anh Vương</option>
                    <option>Nhà anh Hiếu</option>
                    <option>Nhà chị A</option>
                    <option>Nhà chị B</option>
                    <option>Nhà chị C</option>
                    <option>Nhà anh D</option>
                  </select>
                </div>
                <label for="inputEmail3" class="col-sm-2 control-label">Loại</label>
                <div class="col-sm-4">
                  <select class="form-control select2" style="width: 100%;">
                    <option></option>
                    <option>Gấp</option>
                    <option>Bình thường</option>
                    <option>Chưa cần</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Người phụ trách</label>
                <div class="col-sm-10">
                  <select class="form-control select2" multiple="multiple" data-placeholder="Chọn ít nhất một người phụ trách"
                      style="width: 100%;">
                    <option></option>
                    <option>Bạn A</option>
                    <option>Bạn B</option>
                    <option>Bạn C</option>
                    <option>Bạn D</option>
                    <option>Bạn E</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Ngày hoàn thành</label>
                <div class="col-sm-2">
                  <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="datepicker form-control pull-right">
                  </div>
                </div>
              </div>
            </div>

        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <button type="submit" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Xoá</button>
          <button type="submit" class="btn btn-info btn-sm pull-right"><i class="fa fa-save"></i> Lưu</button>
        </div>
        <!-- /.box-footer -->
        <% end %>
      </div>
    </div>
  </div>
</section>

<script>
  $(function () {
    //Date picker
    $('.datepicker').datepicker({
      autoclose: true
    })

    //Initialize Select2 Elements
    $('.select2').select2()
  })
</script>
