<section class="content-header">
  <h1>
    Quản lý dự án
    <small>Danh sách dự án</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Trang chủ</a></li>
    <li class="active">Danh sách dự án</li>
  </ol>
</section>

<section class="content">
	<div class="row">
		<div class="col-xs-12">
			<div class="box box-info">
        <div class="box-header with-border">
          <h3 class="box-title">Điều kiện tìm kiếm</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal">
        	<div class="box-body">
        		<div class="col-md-6">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-2 control-label">Tên</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputEmail3" placeholder="Tên dự án">
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Địa chỉ</label>
                <div class="col-sm-10">
                  <input type="text" class="form-control" id="inputEmail3" placeholder="Địa chỉ của dự án">
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-2 control-label">Bắt đầu</label>
                <div class="col-sm-4">
                  <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="datepicker form-control pull-right">
                  </div>
                </div>
                <label for="inputPassword3" class="col-sm-2 control-label">Kết thúc</label>
                <div class="col-sm-4">
                  <div class="input-group date">
                    <div class="input-group-addon">
                        <i class="fa fa-calendar"></i>
                    </div>
                    <input type="text" class="datepicker form-control pull-right">
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="inputEmail3" class="col-sm-3 control-label">Mã dự án</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="inputEmail3" placeholder="Mã số của dự án">
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">Tình trạng</label>
                <div class="col-sm-9">
                  <select class="form-control select2" style="width: 100%;">
                    <option>Tất cả</option>
                    <option>Đang thực hiện</option>
                    <option>Đã hoàn thành</option>
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label for="inputPassword3" class="col-sm-3 control-label">Ứng tiền</label>
                <div class="col-sm-9">
                  <input type="text" class="form-control" id="inputEmail3" placeholder="Số lần đã ứng tiền">
                </div>
              </div>
            </div>
        	</div>
        	<!-- /.box-body -->
        	<div class="box-footer">
          	<button type="submit" class="btn btn-info btn-sm pull-right"><i class="fa fa-search"></i> Tìm kiếm</button>
        	</div>
         	<!-- /.box-footer -->
        </form>
      </div>
		</div>		
	</div>

	<div class="row">
    <div class="col-xs-12">
      <div class="box box-danger">
        <div class="box-header with-border">
        	<h3 class="box-title">Danh sách dự án</h3>

          <div class="box-tools pull-right">
            <%= link_to new_console_project_path, class: "btn bg-maroon btn-sm" do %>
              <i class="fa fa-plus"></i>
              <%= " Tạo mới" %>
            <% end %>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <tr>
              <th>Mã dự án</th>
              <th>Tên</th>
              <th>Địa chỉ</th>
              <th>Ngày bắt đầu</th>
              <th>Dự kiến hoàn thành</th>
              <th>Tình trạng</th>
              <th>Công việc</th>
              <th>Ứng tiền</th>
              <th class="text-center">###</th>
            </tr>
            <tr>
              <td>1</td>
              <td>Nhà anh Vương</td>
              <td>Lô B145-55 Khu đô thị sinh thái Nam Nguyễn Tri Phương</td>
              <td>01/05/2017</td>
              <td>31/10/2017</td>
              <td><span class="label label-success">Đang thực hiện</span></td>
              <td><span class="label label-success">8/100</span></td>
              <td><span class="label label-success">6/10</span></td>
              <td class="text-center">
              	<a class="btn btn-xs"><i class="fa fa-edit"></i></a>
              	<a class="btn btn-xs"><i class="fa fa-eye"></i></a>
              	<a class="btn btn-xs"><i class="fa fa-trash"></i></a>
              </td>
            </tr>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
	</div>
</section>

<script>
  $(function () {
    //Date picker
    $('.datepicker').datepicker({
      autoclose: true
    })

    //Initialize Select2 Elements
    $('.select2').select2()
  });
</script>